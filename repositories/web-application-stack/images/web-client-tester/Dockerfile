ARG DOCKER_IMAGE_PREFIX="damlys/webdock-"

FROM ${DOCKER_IMAGE_PREFIX}web-assets-builder:0.0.1-example

ENV WEBCLIENTTESTER_TESTS_TARGET_URL="http://127.0.0.1:80" \
  WEBCLIENTTESTER_SELENIUM_CHROME_DRIVER_HOST="127.0.0.1" \
  WEBCLIENTTESTER_SELENIUM_CHROME_DRIVER_PORT="4444" \
  WEBCLIENTTESTER_SELENIUM_FIREFOX_DRIVER_HOST="127.0.0.1" \
  WEBCLIENTTESTER_SELENIUM_FIREFOX_DRIVER_PORT="4444"

COPY app/ /opt/app/
WORKDIR /opt/app/
RUN npm install --production
