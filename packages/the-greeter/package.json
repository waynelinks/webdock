{
  "version": "0.0.0",
  "name": "@damlys/the-greeter",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/damlys/webdock.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "build"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "engines": {
    "node": ">=12 <13"
  },
  "dependencies": {
    "duck-interface": "*"
  },
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "jest": "*",
    "ts-jest": "*",
    "ts-node-dev": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "lint": "eslint './**/*.{ts,tsx}' && tsc --noEmit",
    "lint:fix": "eslint './**/*.{ts,tsx}' --fix",
    "test:all": "jest",
    "test:all:coverage": "rm -rf ./coverage && jest --coverage",
    "test:all:watch": "jest --watchAll",
    "test:unit": "jest ./tests/unit-tests",
    "test:integration": "jest ./tests/integration-tests"
  }
}
